pairs.txt: preds.txt
ifdef COMPOUND
	(cd .. && ln -sf analysis/static-site-info.so analysis/preds.txt .)
	csurf -nogui ../$(program).exe.prj -l $(tooldir)/effort/effort.stk
else
	touch pairs.txt
endif
CLEANFILES += pairs.txt
